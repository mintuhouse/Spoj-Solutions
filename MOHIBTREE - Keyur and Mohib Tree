    #include <bits/stdc++.h>
    using namespace std;
    int a[30000000];
    long long int gc;
    long long int gcd(long long int x,long long int y)
    {
    	if(y==0)
    	{
    		return x;
    	}
    	else
    	{
    		gc=gc+(x/y);
    		return gcd(y,x%y);
    	}
    }
    int main()
    {
    	long long int MAX=1;
    	for(int i=1;i<=7;i++)MAX=MAX*10;
    	for(long long int i=2;i<=MAX+1000;i++)
    	{
    		if(a[i]==0)
    		{
    			for(long long int j=i*i;j<=MAX+1000;j=j+i)
    			{
    				a[j]=1;
    			}
    		}
    	}
    	vector<long long int>v;v.clear();
    	for(long long int i=2;i<=MAX+100;i++)
    	{
    		if(a[i]==0)
    		{
    			v.push_back(i);
    		}
    	}
    	int t;
    	scanf("%d",&t);
    	int pk=1;
    	while(t--)
    	{
    		long long int n,ans=0;
    		scanf("%lld",&n);
    		{
    			int flag=1;
    			int temp=-1;
    			for(int i=0;i<v.size();i++)
    			{
    				if(n%v[i]==0&&n!=v[i])
    				{
    					flag=0;
    					temp=v[i];
    					break;
    				}
    			}
    			if(flag)
    			{
    				printf("Case #%d: 0\n",pk);pk++;
    			}
    			else
    			{
    				ans=1;
    				n=n-temp;
    				ans=ans+(n/2)-1;
    				printf("Case #%d: %lld\n",pk,ans);pk++;
    			}
    		}
    	}
        return 0;
    }
